@import "../../common/stylus/mixin.styl"
.shopcart
  position fixed
  bottom 0
  left 0
  width 100%
  height 46px
  z-index: 50
  .content
    position relative
    z-index 100
    display flex
    width 100%
    height 100%
    font-size 0
    background #141d27
    .content-left
      flex: 1;
    .content-right
      flex 0 0 105px
      width 105px

/*
*
 */


.content-left
  .logo-wapper
    display inline-block
    position: relative
    font-size 0
    width 58px
    height 58px
    box-sizing border-box
    padding 6px
    margin 0 12px
    top -12px
    background #141d27
    border-radius 50%
    .goodsCount
      position absolute
      right 0
      top:0
      width 24px
      height: 16px
      line-height 16px
      text-align center
      border-radius 16px
      font-size: 9px
      color: white
      background rgb(242,21,21)
      box-shadow: 0px 4px 8px 0 rgba(0,0,0,0.4)
    .logo
      border-radius 50%
      width 100%
      height 100%
      font-size 24px
      color #80858a
      line-height 46px
      text-align center
      background #2b343c
  // 购物车有商品就显示高亮 和goodsnumber
  .logo.highlight
      background rgb(0,160,220)
      color #FFF

  .price
    font-size 16px
    color rgba(255,255,255,0.4)
    font-weight 700
    display inline-block
    height 22px
    line-height 22px
    margin 12px 0
    padding-right 12px
    vertical-align top
    border-right 1px solid rgba(255,255,255,0.1)
    &.highlight
      color #FFF




  .desrc
    font-size 10px
    color rgba(255,255,255,0.4)
    font-weight 400
    display inline-block
    height 46px
    line-height 22px
    padding 12px 12px
    vertical-align top
    box-sizing border-box
.content-right
  .pay
    width 89px
    font-size 12px
    line-height 22px
    padding 12px 8px
    font-weight 700
    display inline-block
    text-align center
    vertical-align top
    &.none
      background #2b333b
      color: rgba(255,255,255,0.4)
    &.less
      background #2b333b
      color: rgba(255,255,255,0.4)
    &.enough
      background rgb(4,138,63)
      color #FFF

.cartdetail
  position: fixed;
  max-height: 305px;
  bottom: 46px;
  left: 0;
  width: 100%;
  z-index: 50;
  .title
    height 40px
    background #f3f5f7
    font-weight 200
    line-height 40px
    padding 0 18px
    width 100%
    box-sizing border-box
    border-1px(rgba(7,17,27,0.1))

    .cart
      font-size 14px
      color rgb(7,17,27)
      display inline-block
      float left
    .reset
      color: rgb(0,160,220)
      font-size 12px
      display inline-block
      float right
      padding 0 10px
      border-1px(rgba(7,17,27,0.1))
  .content
    background #FFF
    // 购物车详情的每个列表
    ul
      width 100%
      padding 0 18px
    .foodlist
      height: 48px
      width 100%
      box-sizing border-box
      border-1px(rgba(7,17,27,0.1))
      position relative

      .content-left
        position absolute
        top: 0
        left: 0
        .foodname
          display inline-block
          line-height 24px
          padding 12px 0
          color: rgb(7,17,27)
          font-size 14px
      .content-right
        position absolute
        top: 0
        right: 0
        width 120px
        height 48px
        .food-price
          font-size 14px
          font-weight 700
          color: rgb(240,20,20)
          line-height 24px
          padding 12px 12px 12px 18px
          display inline-block
          vertical-align top
        .cart-wapper
          display inline-block
          padding 12px 0
          position absolute
          right 0
          top: 0;
          .food-count
            input
              width 24px
              font-size 10px
              color: rgb(147,153,159)











