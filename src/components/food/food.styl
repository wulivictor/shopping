.food
  position: fixed
  top: 0
  left: 0
  bottom: 48px
  z-index: 30
  width 100%
  background #FFF
  .food-detail
    .food-image
      width 100%
      height 375px
    .food-msg
      padding  18px
      h2
        font-size 14px
        font-weight 700
        color: rgb(7,17,27)
        line-height 14px
        font-family 'PingFang SC', 'STHeitisc-Light', 'Microsoft YaHei UI'
      .desc
        padding 8px 0 18px 0
        font-size 10px
        color rgb(147,153,159)
        line-height 10px
        .rating
          padding-left 12px
      .cart
        overflow hidden
        .price
          float left
          .nowprice
            font-size 14px
            font-weight 700
            color rgb(240,20,20)
            line-height 24px

            .oldprice
              font-size 10px
              font-weight 700
              color rgb(147,153,159)
              line-height 24px
        .addcart
          float right
          .addbtn
            width 74px
            background rgb(0,160,220)
            font-size 10px
            color #fff
            line-height 12px
            padding 6px 0
            text-align center
            border-radius 12px


