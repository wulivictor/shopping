@import "../../common/stylus/mixin.styl"
.seller
  position absolute
  top: 174px
  bottom 46px
  left: 0
  width 100%
  background-color rgba(7,17,27,0.1)
  .header
    background #FFF
    padding 18px
    .notices
      border-1px(rgba(7,17,27,0.1))
      padding-bottom 18px
      .notice
        &::after
          display block
          clear: both
          content: " "
          height 0
          line-height 0
          visibility hidden
        .header-left
          float left
          .name
            font-size 14px
            color: rgb(7,17,27)
            line-height 14px
            padding-bottom 8px
            font-weight 500
          .star
            display inline-block
            vertical-align middle
            font-weight 400
          .sell-count
            padding-left 12px
            font-weight 400
            font-size 10px
            color rgb(77,85,93)
            display inline-block
            line-height 18px
        .header-right
          float: right
          text-align center
          .icon-favorite
            font-size 24px
            color rgb(240,20,20)
            line-height 24px
            padding-bottom 4px
            display block
          .collect
            font-weight 400
            font-size 10px
            color rgb(77,85,93)
            line-height 10px
    .seller-extra
      padding-top 18px
      display flex
      text-align center
      .title
        font-size 10px
        color rgb(147,153,159)
        line-height 10px
      .content
        font-size 24px
        font-weight 200
        color rgb(7,17,27)
        line-height 24px
        padding-top 4px
      .small
        font-size 10px
      .minPrice
        flex 1
        border-right 1px solid rgba(7,17,27,0.1)
      .deliveryPrice
        flex 1
        border-right 1px solid rgba(7,17,27,0.1)
      .deliveryTime
        flex 1
