@import "../../common/stylus/mixin.styl"
.seller
  position absolute
  top: 174px
  bottom 0
  left: 0
  width 100%
  background-color rgba(7,17,27,0.1)
  overflow hidden
  .seller-content
    background-color rgba(7,17,27,0.1)
    .header
      background #FFF
      padding 18px
      .notices
        border-1px(rgba(7,17,27,0.1))
        padding-bottom 18px
        .notice
          &::after
            display block
            clear: both
            content: " "
            height 0
            line-height 0
            visibility hidden
          .header-left
            float left
            .name
              font-size 14px
              color: rgb(7,17,27)
              line-height 14px
              padding-bottom 8px
              font-weight 500
            .star
              display inline-block
              vertical-align middle
              font-weight 400
            .sell-count
              padding-left 12px
              font-weight 400
              font-size 10px
              color rgb(77,85,93)
              display inline-block
              line-height 18px
          .header-right
            float: right
            text-align center
            .icon-favorite
              font-size 24px
              color rgb(240,20,20)
              line-height 24px
              padding-bottom 4px
              display block
            .collect
              font-weight 400
              font-size 10px
              color rgb(77,85,93)
              line-height 10px
      .seller-extra
        padding-top 18px
        display flex
        text-align center
        .title
          font-size 10px
          color rgb(147,153,159)
          line-height 10px
        .content
          font-size 24px
          font-weight 200
          color rgb(7,17,27)
          line-height 24px
          padding-top 4px
        .small
          font-size 10px
        .minPrice
          flex 1
          border-right 1px solid rgba(7,17,27,0.1)
        .deliveryPrice
          flex 1
          border-right 1px solid rgba(7,17,27,0.1)
        .deliveryTime
          flex 1
    .special
      margin-top 16px
      border-1pxtop(rgba(7,17,27,0.1))
      border-1px(rgba(7,17,27,0.1))
      background #FFF
      padding 18px 18px 0 18px
      .bulletin
        .title
          font-size 14px
          color rgb(7,17,27)
          line-height 14px
          font-weight 500
        .content
          font-size 12px
          font-weight 200
          color rgb(240,20,20)
          line-height 24px
          padding  8px 12px 16px 12px
          //border-1px(rgba(7,17,27,0.1))
      .supports
        li
          padding 16px 6px 16px 12px
          border-1pxtop(rgba(7,17,27,0.1))
          .logo
            display inline-block
            vertical-align top
            .icon
                width 16px
                height 16px
                background-size 16px 16px
                position relative
                display block
                //通过不同的class渲染不同的额图标
                &.guarantee
                  bg-image(guarantee_3)
                &.decrease
                  bg-image(decrease_3)
                &.discount
                  bg-image(discount_3)
                &.invoice
                  bg-image(invoice_3)
                &.special
                  bg-image(special_3)
                  padding 0
                  margin 0
          .description
            font-size 12px
            display inline-block
            font-weight 200
            color rgb(7,17,27)
            line-height 16px
            vertical-align top

    .picture
      margin-top 16px
      background #ffffff
      padding 18px 0
      border-1pxtop(rgba(7,17,27,0.1))
      border-1px(rgba(7,17,27,0.1))
      .title
        font-size 14px
        color rgb(7,17,27)
        line-height 14px
        font-weight 500
        padding-left 18px
      .content
        padding-left 18px
        padding-top 12px
        width 100%
        box-sizing border-box
        ul
          height 180px
          li
            float: left
            list-style none
            &:nth-child(3)
              display none
            &:nth-child(4)
              display none


    .information
      background #FFFFFF
      margin-top 16px
      border-1pxtop(rgba(7,17,27,0.1))
      border-1px(rgba(7,17,27,0.1))
      padding 18px
      .title
        font-size 14px
        color rgb(7,17,27)
        line-height 14px
        font-weight 500
        padding-bottom 12px
      .content
        font-size 12px
        font-weight 200
        color rgb(7,17,27)
        line-height 16px
        li
          padding 16px 12px
          border-1pxtop(rgba(7,17,27,0.1))
          &:last-child
            border-1px(rgba(7,17,27,0.1))


